Vagrant.configure("2") do |config|
    config.vm.box = "debian/bullseye64"
    # config.vm.network "forwarded_port", guest: 4242, host: 4242, protocol: "tcp"
  
    config.vm.provider "virtualbox" do |vb|
      vb.memory = 1024
      vb.cpus = 2
    end
  
    config.vm.synced_folder ".", "/home/vagrant/ft_shield"
  
    config.vm.provision "shell", inline: <<-SHELL
      apt-get update
      apt-get install -y gcc make libc-dev telnet netcat-openbsd libssl-dev
    SHELL
  end
  